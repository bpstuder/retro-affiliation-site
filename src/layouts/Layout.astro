---
const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>{title ? `${title} | Le Coin du Rétro` : 'Le Coin du Rétro'}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Petite police retro / moderne -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #020617;
        --bg-alt: #020617;
        --bg-card: rgba(15, 23, 42, 0.96);
        --text: #e5e7eb;
        --muted: #9ca3af;
        --accent: #22d3ee;
        --accent-strong: #38bdf8;
        --accent-warm: #f97316;
        --accent-soft: rgba(56, 189, 248, 0.18);
        --border-subtle: rgba(148, 163, 184, 0.35);
        --shadow-strong: 0 18px 45px rgba(0, 0, 0, 0.85);
        --radius-lg: 1.25rem;
        --radius-md: 0.9rem;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Space Grotesk", system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", sans-serif;
        color: var(--text);
        background-color: var(--bg);
        /* fond rétro "grille néon" */
        background-image:
          radial-gradient(circle at top, rgba(56, 189, 248, 0.3), transparent 55%),
          linear-gradient(135deg, #020617 0, #020617 35%, #020617 60%, #020617 100%),
          repeating-linear-gradient(
            to bottom,
            rgba(15, 23, 42, 0.7),
            rgba(15, 23, 42, 0.7) 1px,
            rgba(15, 23, 42, 0.9) 1px,
            rgba(15, 23, 42, 0.9) 3px
          );
        min-height: 100vh;
      }

      a {
        color: var(--accent-strong);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      header {
        position: sticky;
        top: 0;
        z-index: 10;
        border-bottom: 1px solid rgba(148, 163, 184, 0.2);
        background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.1), transparent 55%),
          rgba(15, 23, 42, 0.96);
        backdrop-filter: blur(10px);
      }

      header .header-inner {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0.85rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }

      header h1 {
        font-size: 1.2rem;
        margin: 0;
        letter-spacing: 0.06em;
        text-transform: uppercase;
      }

      header h1 a {
        color: var(--text);
        text-decoration: none;
      }

      .logo-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.25rem 0.8rem;
        border-radius: 999px;
        border: 1px solid rgba(56, 189, 248, 0.5);
        background: radial-gradient(circle at top, rgba(56, 189, 248, 0.2), transparent 55%);
      }

      .logo-dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: radial-gradient(circle at center, #f97316, #f97316 40%, #1f2937 90%);
        box-shadow: 0 0 10px rgba(249, 115, 22, 0.8);
      }

      header nav {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.85rem;
      }

      header nav a {
        opacity: 0.9;
        padding: 0.25rem 0.5rem;
        border-radius: 999px;
      }

      header nav a:hover {
        background: rgba(15, 23, 42, 0.9);
        text-decoration: none;
      }

      .page-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1.7rem 1.5rem 3.5rem;
      }

      footer {
        border-top: 1px solid rgba(148, 163, 184, 0.25);
        padding: 1rem 1.5rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--muted);
        background: radial-gradient(circle at bottom, rgba(56, 189, 248, 0.12), transparent 60%),
          #020617;
      }

      /* Page console */

      .console-page {
        background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.16), transparent 55%),
          radial-gradient(circle at bottom right, rgba(249, 115, 22, 0.18), transparent 55%),
          var(--bg-card);
        border-radius: var(--radius-lg);
        border: 1px solid rgba(148, 163, 184, 0.6);
        box-shadow:
          var(--shadow-strong),
          0 0 0 1px rgba(15, 23, 42, 0.9);
        padding: 1.75rem 1.8rem;
        display: flex;
        flex-direction: column;
        gap: 1.6rem;
        position: relative;
        overflow: hidden;
      }

      .console-page::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(
          circle at top right,
          rgba(56, 189, 248, 0.12),
          transparent 60%
        );
        opacity: 0.65;
        pointer-events: none;
      }

      .console-page > * {
        position: relative;
        z-index: 1;
      }

      .console-header {
        display: grid;
        grid-template-columns: minmax(0, 2fr) minmax(0, 1.2fr);
        gap: 1.75rem;
        align-items: center;
      }

      .console-main-info h2 {
        margin: 0 0 0.5rem;
        font-size: 1.8rem;
      }

      .console-tagline {
        margin: 0 0 0.9rem;
        font-style: italic;
        color: var(--muted);
        font-size: 0.95rem;
      }

      .console-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.45rem;
        font-size: 0.82rem;
      }

      .console-pill {
        padding: 0.2rem 0.6rem;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.5);
        background: rgba(15, 23, 42, 0.8);
      }

      .console-pill.accent {
        border-color: rgba(56, 189, 248, 0.6);
        background: rgba(15, 23, 42, 0.95);
        box-shadow: 0 0 10px rgba(56, 189, 248, 0.25);
      }

      .console-image {
        justify-self: flex-end;
      }

      .console-image-inner {
        position: relative;
        display: inline-block;
      }

      .console-image-inner::before {
        content: "";
        position: absolute;
        inset: -16px;
        border-radius: 24px;
        background: conic-gradient(
          from 180deg,
          rgba(56, 189, 248, 0.1),
          rgba(249, 115, 22, 0.2),
          rgba(56, 189, 248, 0.25),
          transparent 70%
        );
        opacity: 0.85;
        filter: blur(16px);
        z-index: 0;
      }

      .console-image img {
        position: relative;
        z-index: 1;
        display: block;
        max-width: 260px;
        width: 100%;
        border-radius: 18px;
        border: 1px solid rgba(148, 163, 184, 0.8);
        box-shadow:
          0 16px 40px rgba(0, 0, 0, 0.95),
          0 0 0 1px rgba(15, 23, 42, 0.95);
      }

      .console-specs {
        background: radial-gradient(circle at top left, rgba(15, 23, 42, 0.9), #020617);
        border-radius: var(--radius-md);
        border: 1px solid rgba(148, 163, 184, 0.7);
        padding: 1.2rem 1.3rem;
      }

      .console-specs-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 1rem;
      }

      .console-specs-header h3 {
        margin: 0;
        font-size: 1.05rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: #e5e7eb;
      }

      .console-specs-header span {
        font-size: 0.8rem;
        color: var(--muted);
      }

      .specs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
        gap: 0.8rem 1.5rem;
        margin-top: 0.9rem;
      }

      .spec-item {
        border-radius: 0.8rem;
        padding: 0.5rem 0.75rem;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(148, 163, 184, 0.35);
      }

      .spec-item dt {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--muted);
        margin-bottom: 0.15rem;
      }

      .spec-item dd {
        margin: 0;
        font-size: 0.95rem;
      }

      .console-body {
        line-height: 1.7;
      }

      .console-body h2,
      .console-body h3 {
        margin-top: 1.4rem;
      }

      .console-body ul {
        padding-left: 1.25rem;
      }

      .console-body li {
        margin-bottom: 0.15rem;
      }

      .console-buy {
        margin-top: 0.6rem;
        padding-top: 1.1rem;
        border-top: 1px dashed rgba(148, 163, 184, 0.5);
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        align-items: center;
        justify-content: space-between;
      }

      .console-buy-label {
        font-size: 0.9rem;
        color: var(--muted);
      }

      .console-buy-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.55rem;
      }

      .btn-cta {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.55rem 1.05rem;
        border-radius: 999px;
        background: radial-gradient(circle at top, var(--accent-strong), var(--accent));
        color: #0b1120;
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        cursor: pointer;
        text-decoration: none;
        box-shadow:
          0 10px 25px rgba(8, 47, 73, 0.8),
          0 0 0 1px rgba(8, 47, 73, 0.9);
      }

      .btn-cta.secondary {
        background: transparent;
        color: var(--accent-strong);
        border: 1px solid rgba(56, 189, 248, 0.6);
        box-shadow: none;
      }

      .btn-cta:hover {
        filter: brightness(1.06);
        text-decoration: none;
        transform: translateY(-1px);
      }

      /* Page liste */

      .page-title {
        margin-top: 0;
        font-size: 1.7rem;
      }

      .page-subtitle {
        margin-top: 0.3rem;
        color: var(--muted);
        max-width: 640px;
        font-size: 0.98rem;
      }

      .console-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.1rem;
        margin-top: 1.4rem;
      }

      .console-card {
        background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.16), transparent 55%),
          rgba(15, 23, 42, 0.96);
        border-radius: 0.95rem;
        border: 1px solid rgba(148, 163, 184, 0.6);
        padding: 0.9rem 1rem;
        text-decoration: none;
        display: block;
        position: relative;
        overflow: hidden;
        transition: transform 0.12s ease-out, box-shadow 0.12s ease-out,
          border-color 0.12s ease-out;
      }

      .console-card::before {
        content: "";
        position: absolute;
        inset: -40%;
        background: radial-gradient(circle at top, rgba(56, 189, 248, 0.26), transparent 55%);
        opacity: 0;
        transition: opacity 0.15s ease-out;
        pointer-events: none;
      }

      .console-card-inner {
        position: relative;
        z-index: 1;
      }

      .console-card-title {
        margin: 0 0 0.25rem;
        font-size: 1rem;
      }

      .console-card-tagline {
        margin: 0;
        font-size: 0.85rem;
        color: var(--muted);
      }

      .console-card-meta {
        margin-top: 0.45rem;
        font-size: 0.8rem;
        color: var(--muted);
      }

      .console-card-meta span + span::before {
        content: " • ";
        color: rgba(148, 163, 184, 0.9);
      }

      .console-card:hover {
        transform: translateY(-2px);
        box-shadow:
          0 18px 40px rgba(0, 0, 0, 0.9),
          0 0 0 1px rgba(56, 189, 248, 0.6);
        border-color: rgba(56, 189, 248, 0.7);
      }

      .console-card:hover::before {
        opacity: 1;
      }

      @media (max-width: 720px) {
        header .header-inner {
          padding: 0.7rem 1.1rem;
        }

        .page-container {
          padding: 1.25rem 1.1rem 2.75rem;
        }

        .console-page {
          padding: 1.3rem 1.1rem 1.5rem;
          border-radius: 1rem;
        }

        .console-header {
          grid-template-columns: 1fr;
        }

        .console-image {
          justify-self: flex-start;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header-inner">
        <div class="logo-pill">
          <span class="logo-dot"></span>
          <span>Le Coin du Rétro</span>
        </div>
        <nav>
          <a href="/">Accueil</a>
        </nav>
      </div>
    </header>

    <div class="page-container">
      <slot />
    </div>

    <footer>
      © {new Date().getFullYear()} Le Coin du Rétro – Consoles portables
    </footer>
  </body>
</html>