---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const consoles = await getCollection('consoles');
---

<Layout title="Consoles rétro portables">
  <h2>Consoles rétro portables</h2>
  <p>Comparatifs et fiches de consoles rétro portables pour t’aider à choisir celle qui te convient.</p>

  <ul>
    {consoles.map((entry) => (
      <li>
        <a href={`/consoles/${entry.slug}`}>
          <strong>{entry.data.title}</strong><br />
          <small>{entry.data.tagline}</small>
        </a>
      </li>
    ))}
  </ul>
</Layout>